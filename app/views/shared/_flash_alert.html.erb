<% flash.each do |k, v| %>
  <div class="alert alert-<%= FLASH_DEVISE_TO_BOOTSTRAP[k].nil? ? k : FLASH_DEVISE_TO_BOOTSTRAP[k] %> alert-dismissible fade show m-0" role="alert">
    <%= v %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
